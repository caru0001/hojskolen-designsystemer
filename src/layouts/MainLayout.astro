---
import Menu from "../components/Menu.astro";
import Footer from "../components/Footer.astro";
import "../styles/tailwind.css";
import "animate.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet" />
    <title>{Astro.props.title}</title>
  </head>
  <body class="bg-Beige-500">
    <header class="">
      <Menu />
    </header>

    <main class="text-Black-500 font-sans">
      <slot />
    </main>

    <footer class="bg-Black-400">
      <Footer />
    </footer>
  </body>
</html>
